generator client {
    provider = "prisma_client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    orders    Order[]
}

model Order {
    id        Int      @id @default(autoincrement())
    title     String
    details   String
    status    String   @default("pending")
    userId    Int
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
}